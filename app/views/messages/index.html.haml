.flash-box
  .notice グループを作成しました
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name seo
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            %a{:href => "/#"}
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            %a{:href => "/#"}
              %i.fa.fa-cog
    .groups
      %a{:href => "/#"}
        .group
          %p.group__group-name sample
          %p.group__latest-message Good bye world
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group{"data-group_id" => ""}
          sample
        %ul.main-header__left-box__member-list
          Member：
          %li.main-header__left-box__member-list__member seo
      %a{:href => "/#"}
        .main-header__edit-btn Edit
    .messages
      .message{"data-message_id" => ""}
        .message__upper-info
          %p.message__upper-info__talker seo
          %p.message__upper-info__date 2016/09/21(Tue) 06:16:55
        %p.message__text Hello world!
      .message{"data-message_id" => ""}
        .message__upper-info
          %p.message__upper-info__talker neko
          %p.message__upper-info__date 2016/09/22(Tue) 06:16:55
        %p.message__text Good bye world!
    .form
      %form#new_message.new_message{"accept-charset" => "UTF-8", :action => "/#", :enctype => "multipart/form-data", :method => "post"}
        %input{:name => "utf8", :type => "hidden", :value => "✓"}/
        %input{:name => "", :type => "hidden", :value => ""}/
        .input-box
          %input#message_content.input-box__text{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
          %label.input-box__image{:for => "message_image"}
            %i.fa.fa-image
            %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}/
        %input.submit-btn{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/
